@misc{Ernoult.2022,
 abstract = {Le jeu des instruments {\`a} vent historiques est bien souvent incompatible avec la d{\'e}ontologie et les pratiques de conservation prot{\'e}geant les collections mus{\'e}ales. Certaines des propri{\'e}t{\'e}s musicales et sonores de ces instruments restent donc inconnues. Les mod{\`e}les acoustiques peuvent pr{\'e}dire certaines de ces propri{\'e}t{\'e}s {\`a} partir de connaissances sur leurs g{\'e}om{\'e}tries. Gr{\^a}ce {\`a} une collaboration entre l'{\'e}quipe Makutu d'Inria Bordeaux Sud-Ouest, la Cit{\'e} de la Musique -- Philharmonie de Paris, l'Institut Technologique Europ{\'e}en des M{\'e}tiers de la Musique (ITEMM) du Mans, et le Centre de Recherche et de Restauration des Mus{\'e}es de France (C2RMF), nous proposons une d{\'e}marche ici appliqu{\'e}e au fonds mus{\'e}al issu de la famille Besson (grande entreprise de facture instrumentale fran{\c{c}}aise), sur une collection de trompettes naturelles du d{\'e}but du XXe si{\`e}cle. La g{\'e}om{\'e}trie des instruments a {\'e}t{\'e} mesur{\'e}e de mani{\`e}re non invasive par tomographie {\`a} rayons X r{\'e}alis{\'e}e au C2RMF. Apr{\`e}s extraction de leurs perces ({\'e}volution du diam{\`e}tre interne), leur imp{\'e}dance d'entr{\'e}e a {\'e}t{\'e} calcul{\'e}e. Pour l'une des trompettes (num{\'e}ro: E.0925) le r{\'e}sultat des simulations a pu {\^e}tre compar{\'e} {\`a} des mesures avec un excellent accord. Malgr{\'e} de nombreux inconnus sur le contr{\^o}le de ces instruments, il est {\'e}galement possible de simuler le son de ces instruments. Un fac-simil{\'e} de cette m{\^e}me trompette a {\'e}t{\'e} construit {\`a} partir de l'imagerie par rayon X. Cela permet de comparer ces sons de synth{\`e}ses {\`a} ceux produits par un musicien. Au-del{\`a} de l'int{\'e}r{\^e}t patrimonial, cette {\'e}tude permet de confronter les outils num{\'e}riques de mod{\'e}lisation {\`a} un cas concret et d'en tester les limites.},
 author = {Ernoult, Augustin},
 year = {2022},
 title = {Pr{\'e}dire les propri{\'e}t{\'e}s acoustiques des instruments du patrimoines: le cas d'une trompette Besson du Mus{\'e}e de la musique},
 url = {https://hal.archives-ouvertes.fr/hal-03848341/},
 address = {Laboratoire de M{\'e}canique et d'Acoustique, Marseille, France.}
}


@misc{Jossic.2022,
 abstract = {The playing of historical woodwind instruments is incompatible with the conservation practices protecting museum collections because of the hygroscopic constraints generated by the musician while playing. Faced with this situation, the Mus{\'e}e de la musique in Paris regularly produces facsimiles, which can be played during concerts and cultural events. We propose the comparison of two approaches to the production of copies of a traverso attributed to Jacques Martin Hotteterre (c1707-1727): the traditional method of commissioning a wooden facsimile by a contemporary maker, and the newer method of 3D printing a facsimile out of polymer materials. The latter approach raises legitimate questions about the degree of fidelity to the original instrument in terms of timbre, playability, and other musical qualities. This paper proposes to provide some initial answers by means of an acoustical study of the material influences on the instrument sound, and psycho-acoustic tests performed with professional musicians. More specifically, it aims at (i) evaluating the influence of the materials used in 3D printing on the acoustical response (input impedance) of the instrument, by measuring the acoustic dissipation factor of wooden tubes, polished and oiled according to the makers practices in the 18th century, and of tubes made with different 3D printing technologies (ii) characterizing the differences perceived by professional musicians between the two instruments, using psychoacoustics tests performed in live listening and playing situations. The study suggests that the acoustic dissipation produced by 3D printed polymer surfaces is comparable to that encountered in traditionally polished and oiled wooden instruments. The results of the psychoacoustic listening and playing tests, revealing how professional flutists qualify the two proposed facsimiles, will also be presented. This study reveals new possibilities for museums, musicians, and researchers for engaging with historical woodwinds, and offers new perspectives for the dissemination of historical and musical knowledge and practices.},
 author = {Jossic, Marguerite and Chang, Lidia},
 year = {2022},
 title = {Perspectives of 3D Printing for Historically Informed Playing: the case of Jacques Martin Hotteterre's E.999.6.1 traverso from the Mus{\'e}e de la musique collection},
 url = {https://hal-cnrs.archives-ouvertes.fr/IJLRDA/hal-03793178},
 address = {Edimbourg, United Kingdom}
}


@misc{Jossic.2022b,
 abstract = {Le jeu des instruments {\`a} vent historiques en bois, du fait des contraintes hygroscopiques engendr{\'e}es, est incompatible avec la d{\'e}ontologie et les pratiques de conservation prot{\'e}geant les collections mus{\'e}ales. Face {\`a} ce constat, le Mus{\'e}e de la musique met r{\'e}guli{\`e}rement en {\oe}uvre des r{\'e}alisations de fac-simil{\'e}s, sur lesquels concerts et {\'e}v{\`e}nements culturels sont possibles. Nous proposons de comparer deux d{\'e}marches de r{\'e}alisation de copies d'un traverso attribu{\'e} {\`a} Jacques Martin Hotteterre ($\backslash$textasciitilde1707-1727): la premi{\`e}re, traditionnelle, aboutit {\`a} la r{\'e}alisation d'un fac-simil{\'e} en bois par une factrice contemporaine ; la seconde conduit {\`a} une copie de ce fac-simil{\'e} par impression 3D de mat{\'e}riaux polym{\`e}res, suscitant des questionnements l{\'e}gitimes sur le degr{\'e} de fid{\'e}lit{\'e} {\`a} l'original en terme de qualit{\'e}s sonores et musicales. Afin de fournir des premiers {\'e}l{\'e}ments de r{\'e}ponse, l'{\'e}tude pr{\'e}sent{\'e}e s'attache {\`a} (i) {\'e}valuer l'influence des mat{\'e}riaux utilis{\'e}s en impression 3D dans l'imp{\'e}dance d'entr{\'e}e de l'instrument, en mesurant le facteur de dissipation acoustique de tubes en bois, polis et huil{\'e}s selon les pratiques connues du XVIIIe si{\`e}cle, et de tubes issus de diff{\'e}rentes technologies d'impression 3D (ii) caract{\'e}riser les diff{\'e}rences per{\c{c}}ues par des musiciens professionnels entre les deux instruments, par le biais d'un test psycho-acoustique d'{\'e}coute mis en ligne. L'{\'e}tude sugg{\`e}re que la dissipation acoustique induite par les surfaces en polym{\`e}re issues d'impression 3D se rapproche de celle rencontr{\'e}e dans les instruments en bois polis et huil{\'e}s traditionnellement. Par ailleurs, le test psycho-acoustique r{\'e}v{\`e}le que des fl{\^u}tistes professionnels ne peuvent distinguer {\`a} l'oreille les deux fac-simil{\'e}s propos{\'e}s. Ces r{\'e}sultats apportent un {\'e}clairage nouveau {\`a} la r{\'e}flexion engageant mus{\'e}es, musiciens, et chercheurs autour d'une pratique musicale historiquement inform{\'e}e, et offre de nouvelles perspectives de diffusion des savoirs historiques et musicaux.},
 author = {Jossic, Marguerite and Fritz, Claudia and Kannavou, Olga and Kirsch, Sebastian and Vaiedelich, St{\'e}phane},
 year = {2022},
 title = {Perspectives de l'impression 3D pour le jeu historiquement inform{\'e}: le cas du traverso E.999.6.1 de Jacques Martin Hotteterre de la collection du Mus{\'e}e de la Musique.},
